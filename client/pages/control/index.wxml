<!--pages/control/index.wxml-->
<view class="tunnel">
    <view class="tunnel-text">
        <text>Socket</text>
        <switch class="tunnel-switch" bindchange="switchChange" color="#007AFF"/>
    </view>
    <view class="section">
        <textarea placeholder="在这里写要发送给服务端scoket的消息" auto-focus value="{{message}}" bindinput="bindKeyInput"/>
    </view>
    <view class="btn-container">
        <view class="btn" bindtap="sendMessage">发送消息</view>
    </view> 
</view>
